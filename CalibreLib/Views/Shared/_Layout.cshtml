        />
      </symbol>
    </svg>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-dark" data-bs-toggle="offcanvas" href="#leftPanel" role="button" aria-controls="leftPanel">
                        <span class="navbar-toggler-icon"></span>
                    </a>
                }
                <a class="navbar-brand ms-2" asp-area="" asp-controller="Home" asp-action="Index">CalibreLib</a>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            <li class="nav-item">
                                <div class="d-flex align-items-center dropdown color-modes me-2">
                                    <button
                                      class="btn px-0 text-decoration-none dropdown-toggle d-flex align-items-center"
                                      id="bd-theme"
                                      type="button"
                                      aria-expanded="false"
                                      data-bs-toggle="dropdown"
                                      data-bs-display="static"
                                    >
                                      <svg class="bi my-1 me-2 theme-icon-active">
                                        <use href="#circle-half"></use>
                                      </svg>
                                      <span class="ms-2" id="bd-theme-text">Toggle theme</span>
                                    </button>
                                    <ul
                                      class="dropdown-menu dropdown-menu-end"
                                      aria-labelledby="bd-theme"
                                      style="--bs-dropdown-min-width: 8rem"
                                    >
                                      <li>
                                        <button
                                          type="button"
                                          class="dropdown-item d-flex align-items-center"
                                          data-bs-theme-value="light"
                                        >
                                          <svg class="bi me-2 opacity-50 theme-icon">
                                            <use href="#sun-fill"></use>
                                          </svg>
                                          Light
                                          <svg class="bi ms-auto d-none">
                                            <use href="#check2"></use>
                                          </svg>
                                        </button>
                                      </li>
                                      <li>
                                        <button
                                          type="button"
                                          class="dropdown-item d-flex align-items-center"
                                          data-bs-theme-value="dark"
                                        >
                                          <svg class="bi me-2 opacity-50 theme-icon">
                                            <use href="#moon-stars-fill"></use>
                                          </svg>
                                          Dark
                                          <svg class="bi ms-auto d-none">
                                            <use href="#check2"></use>
                                          </svg>
                                        </button>
                                      </li>
                                      <li>
                                        <button
                                          type="button"
                                          class="dropdown-item d-flex align-items-center active"
                                          data-bs-theme-value="auto"
                                        >
                                          <svg class="bi me-2 opacity-50 theme-icon">
                                            <use href="#circle-half"></use>
                                          </svg>
                                          Auto
                                          <svg class="bi ms-auto d-none">
                                            <use href="#check2"></use>
                                          </svg>
                                        </button>
                                      </li>
                                    </ul>
                                  </div>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline me-2" onclick="uploadFile()">Upload</button>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text" asp-area="" asp-controller="Task" asp-action="Index">
                                    <i class="fa fa-tasks"></i>    
                                    Tasks
                                </a>
                            </li>
                            @if(User.IsInRole("Admin")) 
                            {
                                <li class="nav-item">
                                    <a class="nav-link text" asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="fa fa-gears"></i>
                                        Admin
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
            <div class="me-2">
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">       
            @if (User.Identity.IsAuthenticated)
            {
            <div class="offcanvas offcanvas-start" tabindex="-1" id="leftPanel" aria-labelledby="leftPanelLabel">
              <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="leftPanelLabel">Navigation Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
              </div>
              <div class="offcanvas-body">
                @await Html.PartialAsync("LeftPanelPartial")
              </div>
            </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CalibreLib - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/isotope/isotope.pkgd.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
