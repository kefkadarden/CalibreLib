@model BookCardModel

@{
    var id = Model.id.ToString();
    var prefix = Model.title;
    var isDisabled = Convert.ToBoolean(ViewData["isDisabled"]);
    var noHoverClass = isDisabled ? "no-hover" : "";
}
<div class="p-3">
    <div id="@(prefix)starRating@(id)" class="star-rating d-inline-flex @(noHoverClass)">
        <input type="radio" name="@(prefix)rating@(id)" value="1" id="star1" asp-for="RatingValue" disabled="@(isDisabled)"><i for="star1"></i>
        <input type="radio" name="@(prefix)rating@(id)" value="2" id="star2" asp-for="RatingValue" disabled="@(isDisabled)"><i for="star2"></i>
        <input type="radio" name="@(prefix)rating@(id)" value="3" id="star3" asp-for="RatingValue" disabled="@(isDisabled)"><i for="star3"></i>
        <input type="radio" name="@(prefix)rating@(id)" value="4" id="star4" asp-for="RatingValue" disabled="@(isDisabled)"><i for="star4"></i>
        <input type="radio" name="@(prefix)rating@(id)" value="5" id="star5" asp-for="RatingValue" disabled="@(isDisabled)"><i for="star5"></i>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    $(document).ready(() =>  {
        var ratingValue = @Model.RatingValue;
        var starRatingId = '@prefix' + "starRating" + @id;
        var starRatingElement = document.getElementById(starRatingId);
        var ratingName = '@prefix' + "rating" + @id;
        if (starRatingElement) {
            var radioInput = starRatingElement.querySelector(`input[name="${ratingName}"][value="${ratingValue}"]`);
            if (radioInput) {
                radioInput.checked = true;
            }
        }
    });
</script>