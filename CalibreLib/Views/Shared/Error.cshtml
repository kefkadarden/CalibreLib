@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4 text-danger">Oops!</h1>
            <h2 class="text-danger">Something went wrong.</h2>
            <p class="lead">We apologize for the inconvenience. Please try again later or contact support if the problem persists.</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            @if (Model.ShowRequestId)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }
            @if (Model.ProblemDetails != null)
            {
                <p>
                    <strong>Status:</strong> <code>@Model.ProblemDetails.Status</code>
                </p>
                <p>
                    <strong>Title:</strong> <code>@Model.ProblemDetails.Title</code>
                </p>
            }
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a href="/" class="btn btn-primary">Go to Homepage</a>
        </div>
    </div>
</div>
