@using CalibreLib.Models.Metadata
@using CalibreLib.Views.Shared.Components
@model Author

@{
    var filterType = EFilterType.Authors;
}

@{
    if (Model != null)
    {
        <script>
            author = @Model.Id;
        </script>

        <h2>Author: @Model.Name</h2>
        <div id="main-container" class="container-fluid">
            @await Html.PartialAsync("~/Views/Shared/Components/BookCardGrid.cshtml",new List<BookCardModel>())
        </div>
    }
    else
    {
        <script>
            currentPageType = 'Authors';
        </script>
        <div class="col-sm-10">
            @await Component.InvokeAsync(typeof(ToolbarComponent), new { type = filterType })
            <div id="listViewComponent">
                @await Component.InvokeAsync(typeof(ListViewComponent), new { type = filterType })
            </div>
        </div>
    }
}

